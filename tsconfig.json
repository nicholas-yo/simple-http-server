{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "watch": true,
    "pretty": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
